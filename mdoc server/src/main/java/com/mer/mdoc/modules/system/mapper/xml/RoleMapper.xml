<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mer.mdoc.modules.system.mapper.RoleMapper">

    <insert id="addRole" parameterType="com.mer.mdoc.modules.system.entity.SysRole">
        INSERT INTO sys_role SET id = #{id}, name = #{name}, status = #{status}, create_time = #{createTime}, update_time = #{updateTime}
    </insert>

    <select id="getRoleList" resultType="com.mer.mdoc.modules.system.entity.SysRole">
        SELECT * FROM sys_role
    </select>
</mapper>